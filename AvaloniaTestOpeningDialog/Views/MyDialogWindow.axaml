<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AvaloniaTestOpeningDialog.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaTestOpeningDialog.MyDialogWindow"
        x:DataType="vm:MyDialogViewModel"
        Title="MyDialogWindow">

  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Edit message from main window:" />
    <TextBox Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}" />

    <Button x:Name="AcceptButton" Content="OK" />
  </StackPanel>
</Window>